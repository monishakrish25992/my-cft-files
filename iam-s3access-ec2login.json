{
   "AWSTemplateFormatVersion":"2010-09-09",
   "Description":"Attach IAM Role to an EC2",
   "Resources":{
      "MyEC2Instance":{
         "Type":"AWS::EC2::Instance",
         "Properties":{
            "InstanceType":"t2.micro",
            "ImageId":"ami-4aa04129",
            "IamInstanceProfile":{
               "Ref":"ListS3BucketsInstanceProfile"
            },
            "KeyName":"my-key"
         }
      },
      "ListS3BucketsInstanceProfile":{
         "Type":"AWS::IAM::InstanceProfile",
         "Properties":{
            "Path":"/",
            "Roles":[
               {
                  "Ref":"ListS3BucketsRole"
               }
            ]
         }
      },
      "ListS3BucketsPolicy":{
         "Type":"AWS::IAM::Policy",
         "Properties":{
            "PolicyName":"ListS3BucketsPolicy",
            "PolicyDocument":{
               "Statement":[
                  {
                     "Effect":"Allow",
                     "Action":[
                        "s3:List*"
                     ],
                     "Resource":"*"
                  }
               ]
            },
            "Roles":[
               {
                  "Ref":"ListS3BucketsRole"
               }
            ]
         }
      },
      "ListS3BucketsRole":{
         "Type":"AWS::IAM::Role",
         "Properties":{
            "AssumeRolePolicyDocument":{
               "Version":"2012-10-17",
               "Statement":[
                  {
                     "Effect":"Allow",
                     "Principal":{
                        "Service":[
                           "ec2.amazonaws.com"
                        ]
                     },
                     "Action":[
                        "sts:AssumeRole"
                     ]
                  }
               ]
            },
            "Path":"/"
         }
      }
   }
}
